{
  "name": "Request Capture",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["webRequest", "storage", "tabs"],
  "action": {
    "default_title": "Request Capture",
    "default_popup": "popup.html"
  },
  "host_permissions": ["https://*/*", "http://*/*"],
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  }
}
